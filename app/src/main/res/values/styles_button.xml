<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/outlinedButtonTextColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outlinedButtonTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="LargeButton" parent="AppButton">
        <item name="android:height">50dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LargeOutlinedButton" parent="AppOutlinedButton">
        <item name="android:height">50dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>