<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<import type="ua.ideabank.obank.R" />
	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.google.android.material.card.MaterialCardView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			app:cardBackgroundColor="@color/background"
			app:contentPadding="@dimen/offset_8"
			app:cardElevation="@dimen/offset_10"
			app:cardUseCompatPadding="true"
			app:cardCornerRadius="@dimen/offset_10">

			<ImageView
				android:id="@+id/loadingImage"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:layout_gravity="center"
				android:bind_img_res_id="@{R.drawable.logo_loader}"
				tools:src="@drawable/logo_loader"
				tools:ignore="ContentDescription" />

		</com.google.android.material.card.MaterialCardView>

	</FrameLayout>


</layout>
